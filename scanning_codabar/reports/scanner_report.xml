    <template id="report_scanner_lines">
        <t t-call="web.html_container">
            <div class="article" style="margin: 0; padding: 0;">
                <table style="width: 100%; margin: 0; padding: 0; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th style="border: 1px solid black; padding: 8px;">Barcode</th>
                            <th style="border: 1px solid black; padding: 8px;">Name</th>
                            <th style="border: 1px solid black; padding: 8px;">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="line">
                            <tr>
                                <td style="border: 1px solid black; padding: 8px;"><span t-field="line.barcode"/></td>
                                <td style="border: 1px solid black; padding: 8px;"><span t-field="line.name"/></td>
                                <td style="border: 1px solid black; padding: 8px;"><span t-field="line.price"/></td>
                            </tr>
                        </t>
                        <tr>
                            <td colspan="2" style="border: 1px solid black; padding: 8px; text-align: right;"><strong>Total:</strong></td>
                            <td style="border: 1px solid black; padding: 8px;"><strong><t t-esc="sum(docs.mapped('price'))"/></strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>



    

