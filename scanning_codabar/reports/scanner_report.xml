    <template id="report_scanner_lines">
        <t t-call="web.html_container">
            <div class="custom-report" style="position: relative; padding: 20px;">
                <!-- Header Section -->
                <div class="header" style="text-align: center; margin-bottom: 20px;">
                    <h2>List Report</h2>
                </div>
                
                <!-- Table Section -->
                <div class="table-container" 
                    style="position: relative; margin: 20px auto; top: 5px; width: 100%;">
                    <table class="table table-bordered" 
                        style="width: 100%; border-collapse: collapse; border: 1px solid black;">
                        <thead style="background-color: #d9edf7; font-weight: bold; text-align: center;">
                            <tr>
                                <th style="border: 1px solid black; padding: 10px; font-size: 14px;">Barcode</th>
                                <th style="border: 1px solid black; padding: 10px; font-size: 14px;">Name</th>
                                <th style="border: 1px solid black; padding: 10px; font-size: 14px;">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td style="border: 1px solid black; padding: 8px; font-size: 12px; text-align: center;">
                                        <span t-field="line.barcode"/>
                                    </td>
                                    <td style="border: 1px solid black; padding: 8px; font-size: 12px;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td style="border: 1px solid black; padding: 8px; font-size: 12px; text-align: right;">
                                        <span t-field="line.price"/>
                                    </td>
                                </tr>
                            </t>
                            <!-- Total Row -->
                            <tr style="background-color: #f2f2f2;">
                                <td colspan="2" style="text-align: right; font-weight: bold; padding: 8px; border: 1px solid black;">
                                    Total:
                                </td>
                                <td style="font-weight: bold; padding: 8px; text-align: right; border: 1px solid black;">
                                    <t t-esc="sum(docs.mapped('price'))"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <!-- Footer Section -->
                <div class="footer" 
                    style="position: relative; text-align: center; margin-top: 40px; font-size: 12px; color: #666;">
                    <p>Generated by Odoo Report</p>
                </div>
            </div>
        </t>
    </template>



   
    





